// Binary to decimal conversion
#include <bits/stdc++.h>
using namespace std;

int binaryToDecimalMethod1(int num)
{
  int decimal = 0;
  int i = 0;
  while(num)
  {
      int bit = num % 10;
      decimal = bit * pow(2, i++) + decimal;
      num = num / 10;
  }
  return decimal;
}
